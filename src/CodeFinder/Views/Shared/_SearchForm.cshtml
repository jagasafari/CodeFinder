@using System.Threading.Tasks
@using CodeFinder.ViewModels
@model CodeToFindViewModel
<form asp-controller="Search" asp-action="MatchingFiles" method="post" class="row form-inline"
      id="matchingFilesForm" role="form" asp-antiforgery="true">
    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
    <div class="col-xs-4 form-group form-group-sm">
        <div>
            <input asp-for="SearchedPath" class="form-control input-sm" type="text" 
                   value="@(Model?.SearchedPath ?? "c:\\gh")" />
            <span asp-validation-for="SearchedPath" class="text-danger"></span>
        </div>
        <label asp-for="SearchedPath" class="control-label"></label>
    </div>
    <div class="col-xs-2 form-group form-group-sm">
        <div>
            <input asp-for="FileExtensionPattern" class="form-control input-sm" type="text" 
                   value="@(Model?.FileExtensionPattern ?? "*.cs")" />
            <span asp-validation-for="FileExtensionPattern" class="text-danger"></span>
        </div>
        <label asp-for="FileExtensionPattern" class="control-label"></label>
    </div>
    <div class="col-xs-5 form-group form-group-sm">
        <div>
            <input asp-for="Keywords" class="form-control input-sm" type="text" />
            <span asp-validation-for="Keywords" class="text-danger"></span>
        </div>
        <label asp-for="Keywords" class="control-label"></label>
    </div>
    <div class="col-xs-1 form-group form-group-sm">
            <button type="submit" class="btn btn-default pull-right">Display</button>
    </div>
</form>
